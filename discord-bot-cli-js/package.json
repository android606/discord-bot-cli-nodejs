{
  "name": "discord-bot-cli",
  "version": "1.0.0",
  "description": "A Linux command-line utility that acts as a Discord bot interface for shell scripts",
  "main": "src/index.js",
  "bin": {
    "discord-bot": "./bin/discord-bot"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node test-complete.js",
    "test:service": "node test-service.js",
    "test:file": "node test-file.js",
    "test:socket": "node test-socket.js",
    "test:stdin": "node test-stdin.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "pkg package.json --targets node18-linux-x64 --output dist/discord-bot"
  },
  "keywords": [
    "discord",
    "bot",
    "cli",
    "linux",
    "shell",
    "automation",
    "ipc",
    "socket"
  ],
  "author": "Discord Bot CLI",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "yaml": "^2.3.4",
    "dotenv": "^16.3.1",
    "chokidar": "^3.5.3",
    "net": "^1.0.2",
    "fs-extra": "^11.1.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "execa": "^8.0.1",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "scripts/**/*"
    ]
  }
}